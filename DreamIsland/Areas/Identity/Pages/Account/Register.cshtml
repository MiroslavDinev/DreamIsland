@page
@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<style>
    body {
  background-image: url("/islandforformbg.jpg");
}
</style>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center">@ViewBag.Title</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="bg-white text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="bg-white text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" />
                <span asp-validation-for="Input.Nickname" class="bg-white text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.OccupationalField"></label>
                <input asp-for="Input.OccupationalField" class="form-control" />
                <span asp-validation-for="Input.OccupationalField" class="bg-white text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="bg-white text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="bg-white text-danger"></span>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>                
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
